<Window x:Class="Remembvoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Remembvoc"
        Title="MainWindow" Height="600"
        Width="450" MouseLeftButtonDown="MWindow_MouseLeftButtonDown"
        WindowStyle="None" x:Name="MWindow"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ControlTemplate x:Key="titleButton" TargetType="Button">
            <Grid>
                <Rectangle x:Name="backgroundElement" Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}"/>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="#d6200f"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ObjectDataProvider x:Key="languageEnum" MethodName="GetValues" ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:Models.Languages"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
       
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- #region TitleBar -->
        
        <Grid Background="#2d2e30" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal"
                        Background="#656769">
                    <Button x:Name="btnMinimize" Content="_" 
                            Width="50" Background="Transparent" 
                            BorderBrush="Transparent" Foreground="#bbbfbc" 
                            Height="30" Click="btnMinimize_Click"
                            FontSize="18" Template="{StaticResource titleButton}"/>
                    <Button x:Name="btnClose" Content="X" 
                            Width="50" Background="Transparent" 
                            BorderBrush="Transparent" Foreground="#bbbfbc" 
                            Height="30" Click="btnClose_Click" Template="{StaticResource titleButton}"/>
            </StackPanel>
        </Grid>

        <!-- #endregion TitleBar -->

        <!-- #region Main -->

        <Grid Grid.Row="1">
            <TabControl x:Name="mainTabControl">
                
                <TabItem x:Name="tabItemVocabulary">
                    
                    <TabItem.Header>
                        <TextBlock Text="Vocabulary"/>
                    </TabItem.Header>
                    
                    <DataGrid Name="myDG" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Word" Binding="{Binding Phrase}"
                                                Width="300"/>
                            <DataGridComboBoxColumn Header="Language" SelectedItemBinding="{Binding Language}"
                                                ItemsSource="{Binding Source={StaticResource languageEnum}}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                   
                </TabItem>

                <TabItem x:Name="tabItemSearch">
                    <TabItem.Header>
                        <TextBlock Text="Search"/>
                    </TabItem.Header>
                </TabItem>

                <TabItem  x:Name="tabItemTranslate">
                    <TabItem.Header>
                        <TextBlock Text="Translate"/>
                    </TabItem.Header>
                </TabItem>
                
            </TabControl>
        </Grid>
        
        <!-- #endregion Main -->
        
    </Grid>
</Window>
